{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types" : [
      "@types/node",
    ],
    "baseUrl": "./src",
    "paths": {
      "*": ["./types/*"],
      "@/*": ["./*"]
    },
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/__tests__/*.ts",
    "./src/**/*.test.ts"
  ]
}
